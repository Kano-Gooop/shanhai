view {
  overflow: visible;
}

.page {
  min-height: 100vh;
  background: #f4f4f4;
  box-sizing: border-box;
  line-height: 1;
  padding-top: 24rpx;
  padding-bottom: 50rpx;
}

.order-list {
}

.order-list .order:first-child {
  margin-top: 0;
}

.order-list .order {
  margin-top: 24rpx;
  padding: 38rpx 0 43rpx 24rpx;
  font-size: 28rpx;
  background: #fff;
}

.order-list .order .top::before {
  content: '';
  width: 4rpx;
  height: 26rpx;
  background: #ff4040;
  margin-right: 15rpx;
}

.order-list .order .top {
  display: flex;
  align-items: center;
  color: #000;
  padding-bottom: 23rpx;
}

.detail {
  color: #4d4d4d;
  border-top: 3rpx solid #eee;
  padding-top: 37rpx;
}

.detail .detail-item:first-child {
  margin-top: 0;
}

.detail .detail-item {
  margin-top: 29rpx;
  display: flex;
}

.detail .detail-item .label {
  width: 208rpx;
}

.detail .detail-item .value {
  flex-grow: 1;
}
