page {
    padding: 15rpx 30rpx;
    box-sizing: border-box;
}

.title {
    text-align: center;
    font-weight: bold;
    font-size: 40rpx;
}

.content {
    margin-top: 45rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.content image {
    max-width: 100%;
    box-sizing: border-box;
}

.info {
    margin-top: 30rpx;
}

.info .line {
    text-align:right;
    line-height:2;
    color: #666;
}
map {
  margin-top: 30rpx;
  width: 100%;
  height: 400rpx;
}